@model List<Sabzishop.Models.Products.Products>
<section class="product_area mb-46">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="section_title">
						<h2>کامپیوتر و لپ تاپ</h2>
					</div>
				</div>
			</div>
			<div class="product_carousel product_column5 owl-carousel">

@for(int i=0; i<Model.Count; i++)
{
    <article class="single_product">
        <figure>
            <div class="product_thumb">
                <a class="primary_img" href="product-details.html"><img src="~/assets/img/product/@($"product{Model[i].id}.jpg")" alt=""></a>
                <a class="secondary_img" href="product-details.html"><img src="~/assets/img/product/@($"product{Model[i].id}.jpg")" alt=""></a>
                <div class="label_product">
                    <span class="label_sale">فروش</span>
                </div>
                <div class="action_links">
                    <ul>
                        <li class="wishlist"><a href="wishlist.html" title="افزودن به علاقه‌مندی‌ها"><i class="fa fa-heart-o" aria-hidden="true"></i></a></li>
                        <li class="compare"><a href="#" title="مقایسه"><span class="ion-levels"></span></a></li>
                        <li class="quick_button">
                            <a href="#" data-toggle="modal" data-target="#modal_box" title="مشاهده سریع"> <span class="ion-ios-search-strong"></span></a>
                        </li>
                    </ul>
                </div>
                <div class="add_to_cart">
                    <a href="cart.html" title="افزودن به سبد">افزودن به سبد</a>
                </div>
            </div>
            <figcaption class="product_content">
                <div class="price_box">

                    @if (Model[i].descountid == 0)
                    {
                                           
                        <span class="current_price">@Model[i].price تومان</span>


                    }
                    else
                    {
                                           
                        <span class="old_price">@Model[i].price تومان</span>
                        <span class="current_price">@Model[i].descount.pricedes تومان</span>

                    }
                </div>
                <h3 class="product_name"><a  asp-action="Details" asp-route-id="@Model[i].id">گوشی موبایل شیائومی مدل MI 9 Lite</a></h3>
            </figcaption>
        </figure>
    </article>

}
			</div>
		</div>
	</section>